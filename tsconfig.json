{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2019",
      "ES2020.Promise"
    ],
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "./src",
  ]
}
